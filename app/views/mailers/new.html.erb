<main class="flex w-full min-h-screen" data-controller="builder">
  <section class="flex-1">
    left
  </section>
  <section class="flex-1 bg-gray-100">
    <div data-controller="tabs" data-tabs-active-tab="-mb-px border-l border-t border-r rounded-t">
      <ul class="flex border-b list-reset">
        <li class="mr-1 -mb-px" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block px-4 py-2 font-semibold text-blue-500 no-underline bg-white hover:text-blue-700" href="#">Preview</a>
        </li>
        <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block px-4 py-2 font-semibold text-blue-500 no-underline bg-white hover:text-blue-700" href="#">HTML</a>
        </li>
      </ul>

      <div class="hidden px-4 py-4 border-b border-l border-r" data-tabs-target="panel">
        <%= render partial: "preview" %>
      </div>

      <div class="hidden px-4 py-4 border-b border-l border-r" data-tabs-target="panel">
        <%= render partial: "output" %>
      </div>
    </div>
  </section>
</main>