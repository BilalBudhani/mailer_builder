<main class="flex w-full min-h-screen" data-controller="builder">
  <section class="flex-1">
    <%= render partial: "form" %>
  </section>
  <section class="flex-1 p-8 bg-gray-100">
    <div data-controller="tabs" data-tabs-active-tab="">
      <ul class="flex list-reset">
        <li class="px-6 py-2 mx-4 border-b-4 border-red-400" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block font-semibold" href="#">Preview</a>
        </li>
        <li class="px-6 py-2 mx-4" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block font-semibold" href="#">HTML</a>
        </li>
      </ul>

      <div class="hidden px-4 py-4 my-4 border-2" data-tabs-target="panel">
        <%= render partial: "preview" %>
      </div>

      <div class="hidden px-4 py-4 my-4 border-2" data-tabs-target="panel">
        <%= render partial: "output" %>
      </div>
    </div>
  </section>
</main>