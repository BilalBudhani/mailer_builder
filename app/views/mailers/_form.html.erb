<%= form_with(model: mailer, class: "text-lg") do |f| %>
  <div data-controller="tabs" data-tabs-active-tab="border-b-4 border-red-400" class="py-8">
    <ul class="flex px-12 border-b-2 list-reset">
      <li class="px-6 py-2 mx-4" data-tabs-target="tab" data-action="click->tabs#change">
        <a class="inline-block font-semibold" href="#">Content</a>
      </li>
      <li class="px-6 py-2 mx-4" data-tabs-target="tab" data-action="click->tabs#change">
        <a class="inline-block font-semibold" href="#">Styling</a>
      </li>
    </ul>
    <div class="hidden px-12 py-4 my-4" data-tabs-target="panel">
      <div class="flex flex-col mb-4">
        <%= f.label :title, class: "font-medium" %>
        <%= f.text_field :title, data: {'builder-target': 'title', action: 'input->builder#refresh'} %>
      </div>
      <div class="flex flex-col mb-4">
        <%= f.label :description, class: "font-medium" %>
        <%= f.text_area :description, data: {'builder-target': 'description', action: 'input->builder#refresh'}  %>
      </div>
      <div class="flex items-center mb-4">
        <%= f.check_box :social_sharing, data: {'builder-target': 'socialSharing', action: 'change->builder#refresh'}  %>
        <%= f.label :social_sharing, class: "ml-2 font-medium" %>
      </div>
      <div class="flex items-center mb-4">
        <%= f.check_box :referral_link, data: {'builder-target': 'referralLink', action: 'change->builder#refresh'}  %>
        <%= f.label :referral_link, class: "ml-2 font-medium" %>
      </div>
    </div>
    <div class="hidden px-12 py-4 my-4" data-tabs-target="panel">
      <div class="flex mb-4">
        <%= f.label :title_color, "Title Color", class: "font-medium mr-4" %>
        <%= f.color_field :title_color, data: {'builder-target': 'titleColor', action: 'input->builder#refresh'}  %>
      </div>
      <div class="flex mb-4">
        <%= f.label :description_color, "Description Color", class: "font-medium mr-4" %>
        <%= f.color_field :description_color, data: {'builder-target': 'descriptionColor', action: 'input->builder#refresh'}  %>
      </div>
    </div>

  <div class="flex items-center justify-center mb-4">
    <%= f.submit "Save", class: "px-8 py-2 bg-red-600 text-white rounded" %>
  </div>
<% end %>