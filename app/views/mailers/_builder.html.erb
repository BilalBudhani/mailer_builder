<main class="flex w-full min-h-screen" data-controller="builder">
  <section class="flex-1">
    <%= render partial: "form", locals: {mailer: mailer} %>
  </section>
  <section class="flex-1 bg-gray-100">
    <div data-controller="tabs" data-tabs-active-tab="border-b-4 border-red-400" class="py-8">
      <ul class="flex px-12 border-b-2 list-reset">
        <li class="px-6 py-2 mx-4" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block font-semibold" href="#">Preview</a>
        </li>
        <li class="px-6 py-2 mx-4" data-tabs-target="tab" data-action="click->tabs#change">
          <a class="inline-block font-semibold" href="#">HTML</a>
        </li>
      </ul>

      <div class="hidden px-12 py-4 my-4" data-tabs-target="panel">
        <%= render partial: "preview", locals: {mailer: mailer} %>
      </div>

      <div class="hidden px-12 py-4 my-4" data-tabs-target="panel">
        <%= render partial: "output" %>
      </div>
    </div>
  </section>
</main>